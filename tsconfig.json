{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es5","es2017", "es6", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "importHelpers": true
  },
  "include": [
    "./jest/**/*",
    "./src/**/*",
    "./src/types/api.d.ts",
    "./src/types/data.stores.d.ts",
    "./node_modules/@mui/material",
    "./node_modules/@kintone/dts-gen/kintone.d.ts",
    "jest/.env.ts" // will deprecate it in favor of jest.config
   ],
  "rules": {
    "quotemark": [true, "single"]
  }
}
