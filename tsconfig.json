{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "./src/types/forms.d.ts",
    "./node_modules/@kintone/dts-gen/kintone.d.ts"
  ],
  "rules": {
    "quotemark": [true, "single"]
  }
}
